msgid ""
" Free physical volumes:  ${FREE_PVS}\n"
" Used physical volumes:  ${USED_PVS}\n"
" ZFS pools:              ${VGS}\n"
" ZFS logical volumes:    ${LVS}\n"
" ${BOOTFS}"
msgstr ""
" Cyfrolau corfforol yn rhydd:    ${FREE_PVS}\n"
" Cyfrolau corfforol defnyddiwyd: ${USED_PVS}\n"
" Pyllau ZFS:                     ${VGS}\n"
" Cyfrolau rhesymegol ZFS:        ${LVS}"

